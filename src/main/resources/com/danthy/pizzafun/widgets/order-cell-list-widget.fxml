<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>


<VBox fx:id="cellRoot" stylesheets="@../styles/widgets/order-cell-list-widget.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" >
   <children>
      <StackPane VBox.vgrow="ALWAYS">
         <children>
            <ImageView fx:id="orderImageBg" fitHeight="381.0" fitWidth="228.0" pickOnBounds="true">
               <image>
                  <Image url="@../assets/imgs/pizza-order-background.png" />
               </image>
            </ImageView>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" StackPane.alignment="CENTER">
               <children>
                  <VBox alignment="CENTER" prefHeight="142.0" prefWidth="228.0" VBox.vgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="55.0" fitWidth="115.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../assets/imgs/pizza-button-background.png" />
                           </image>
                        </ImageView>
                        <Label fx:id="pizzaNameLabel" alignment="CENTER" prefHeight="30.0" prefWidth="224.0" text="Nome" textAlignment="JUSTIFY" textFill="WHITE" wrapText="true">
                           <font>
                              <Font name="Unispace-Bold" size="13.0" />
                           </font>
                        </Label>
                        <Line endX="100.0" fill="BLACK" startX="-100.0" strokeLineCap="ROUND" strokeLineJoin="ROUND" />
                     </children>
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                  </VBox>
                  <TextFlow VBox.vgrow="ALWAYS">
                     <children>
                        <Label prefHeight="27.0" prefWidth="189.0" text="Ingredientes:" textFill="WHITE">
                           <font>
                              <Font name="Unispace-Bold" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </TextFlow>
                  <TextFlow VBox.vgrow="ALWAYS">
                     <children>
                        <Label fx:id="itemsLabel" alignment="TOP_LEFT" contentDisplay="TOP" prefHeight="158.0" prefWidth="190.0" text="Items" textAlignment="JUSTIFY" textFill="WHITE" wrapText="true">
                           <font>
                              <Font name="Unispace-Bold" size="10.0" />
                           </font>
                        </Label>
                     </children>
                  </TextFlow>
                  <StackPane prefHeight="50.0" prefWidth="228.0">
                     <children>
                        <Button id="produce-button" fx:id="produceButton" mnemonicParsing="false" prefHeight="38.0" prefWidth="190.0" text="Produzir" textAlignment="JUSTIFY" textFill="WHITE" wrapText="true">
                           <font>
                              <Font name="Unispace-Bold" size="12.0" />
                           </font>
                        </Button>
                        <ProgressBar fx:id="progressStatus" prefHeight="38.0" prefWidth="190.0" progress="0.0" />
                     </children>
                  </StackPane>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="5.0" />
               </padding>
            </VBox>
         </children>
      </StackPane>
   </children>
</VBox>
